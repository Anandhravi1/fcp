<?xml version="1.0"?>
<!--
/**
 * Create a sitemap config fields
 *
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="sitemap" translate="label" sortOrder="10">
            <label>Sitemap Config</label>
        </tab>
        <section id="sitemapConfig" translate="label" sortOrder="130" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Sitemap</label>
            <tab>sitemap</tab>
            <resource>FoxChapel_Sitemap::sitemap_config</resource>
            <group id="html_sitemap_page" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
                <label>HTML Sitemap</label>
                <field id="showCms" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Show CMS Pages</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
		<field id="showAccount" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Show Account</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
		<field id="showDefaultContactLink" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Show Default Contact Link</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
		<field id="showCategories" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="0" showInStore="0">
                    <label>Show Categories</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
               
            </group>
        </section>
    </system>
</config>
